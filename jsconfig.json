{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@app/*": ["src/app/*"],
      "@config/*": ["src/config/*"],
      "@controller/*": ["src/controller/*"],
      "@helpers/*": ["src/helpers/*"],
      "@model/*": ["src/model/*"],
      "@server/*": ["src/server/*"],
      "@service/*": ["src/service/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}